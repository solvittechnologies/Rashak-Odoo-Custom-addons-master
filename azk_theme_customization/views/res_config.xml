<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="azk_theme_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">azk_theme_res_config_settings_view_form
            </field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="6"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="after">
                	<div id="azk_theme">
                		 <h2>Theme Customization</h2>
	                    <div class="row mt16 o_settings_container">
	                         <div class="col-12 col-lg-6 o_setting_box">
	                             <div class="o_setting_right_pane">
	                             	<label for="theme_id" string="Theme" class="col-3 col-lg-3 o_light_label"/>
	                                 <field name="theme_id" class="oe_inline"/>
	                                 
	                             </div>
	                         </div>
	                      </div>
                      </div>
                </xpath>
             </field>
     </record>
</odoo>
