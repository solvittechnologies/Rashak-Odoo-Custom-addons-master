	<record id="azk_theme_color_action" model="ir.actions.act_window">
        <field name="name">Color Scheme</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">azk.theme.customization</field>
        <field name="view_mode">tree,form</field>
    </record>
 
    <menuitem
        id="azk_theme_menu"
        name="AZKA Theme Customization"
        parent="base.menu_custom"
        sequence="1"
    />
    
    <menuitem
        id="azk_color_scheme"
        name="Color Schemes"
        parent="azk_theme_menu"
        sequence="1"
        action="azk_theme_color_action"
    />
    
 
